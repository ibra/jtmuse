---
import Card from "../components/Card.astro";
import CategoryCard from "../components/CategoryCard.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="categoriees">
  <Navbar />
  <div class="flex justify-center">
    <div
      class="grid grid-cols-3 gap-5 sm:grid-cols-1 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-4 my-10"
    >
      <!-- music  -->
      <CategoryCard category="crescendo" />
      <CategoryCard category="battle of the bands" />
      <CategoryCard category="originals" />
      <CategoryCard category="tune titans" />

      <!-- drama  -->
      <CategoryCard category="rhapsody" />
      <CategoryCard category="comedy of errors" />
      <CategoryCard category="metadrama" />
      <CategoryCard category="improv" />
    </div>
  </div>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout title="JT Muse">
  <div class="content">
    <div class="hero">
      <img class="logo" src="logo.png" />
      <h2 class="subtitle-gradient">lgs jt's flagship arts olympiad</h2>
    </div>
  </div>
</Layout>

<style>
  .content {
    margin: auto;
    width: 100%;

    font-size: 20px;
    line-height: 1.4;
  }

  h2 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .logo {
    display: block;
    margin: auto;
    padding-top: 2em;

    width: 350px;
    height: auto;
  }

  .subtitle-gradient {
    background-image: var(--secondary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>

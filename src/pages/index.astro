---
import Layout from "../layouts/Layout.astro";
import HeroButton from "../components/HeroButton.astro";
---

<Layout title="JT Muse">
  <div class="flex items-center justify-center h-screen">
    <div class="flex items-center justify-center flex-col">
      <h2 class="subtitle-gradient pt-2 text-3xl">LGS JT presents</h2>
      <img class="logo mb-5" src="muse_500px.png" alt="muse logo" />
      <HeroButton title="register now" , href="https://google.com" />
    </div>
  </div>
</Layout>

<style>
  .subtitle-gradient {
    background-image: var(--secondary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>

---
import Card from "../components/Card.astro";
import TextualCard from "../components/TextualCard.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";
import logo from "../assets/muse_full.webp";
import Heading from "../components/Heading.astro";
import HeroButton from "../components/HeroButton.astro";
---

<Layout title="info">
  <div class="mb-auto">
    <Navbar />
    <Image
      src={logo}
      alt="muse logo"
      loading="lazy"
      class="mb-5 p-10 animate-stagger mx-auto max-w-2xl"
    />
    <div class="flex items-center justify-center">
      <HeroButton title="view event invite" href="/invite.pdf" styling="" />
    </div>
    <TextualCard
      title="what is muse?"
      description=`Managed by the Arts Council of the senior A2
  batch of LGS Johar Town, Muse '24 is the
  first edition to JT's newest addition to its
  unparalleled lineup of events in the local circuit.
  Years in planning, JT Muse is an Arts Olympiad
  showcasing art at its most refined form, with a
  plethora of subevents focusing on various
  outlets of artistic expression: Literature, Art, Media, Music and Drama.`
    />

    <h3 class="font-bold text-center text-white text-lg sm:text-2xl md:text-lg">
      website by ibrahim hisham | Â© 2024 JT Muse, all rights reserved.
    </h3>
  </div>
</Layout>

---
import CommonHead from "../components/CommonHead.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <CommonHead
    title={title}
    description="Muse is the first Arts Olympiad in LGS JT's history to be managed by the Senior Arts Council."
  />
  <body>
    <slot />
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");

      :root {
        --accent: rgb(204, 155, 70);
        --accent-light: rgb(237, 202, 144);
        --accent-dark: 49, 10, 101;

        --secondary: #e3ac5a;
        --secondary-light: #c79242;

        --accent-gradient: linear-gradient(
          45deg,
          var(--accent),
          var(--accent-light) 30%,
          white 60%
        );

        --secondary-gradient: linear-gradient(
          40deg,
          var(--secondary),
          var(--secondary-light) 30%,
          white 60%
        );
      }

      body {
        background: linear-gradient(45deg, #050c1f, #0d1f4f);
        background-size: 400% 400%;

        animation: scrollGradient 20s ease infinite both;
      }

      @keyframes scrollGradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      html {
        font-family: Raleway, sans-serif;
      }
    </style>
  </body>
</html>

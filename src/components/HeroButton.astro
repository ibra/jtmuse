---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a
  href="https://google.com"
  class="bg-blue-600 hover:bg-blue-400 text-white text-xl font-bold py-2 px-4 rounded-md inline-flex items-center"
>
  {title}
</a>

<style>
  .stylizedButton {
    list-style: none;
    list-style-type: none;
    padding: 5px;
  }
</style>

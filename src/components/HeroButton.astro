---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a
  href="https://google.com"
  class="bg-yellow-300 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-flex items-center"
>
  {title}
</a>

<style>
  .stylizedButton {
    list-style: none;
    list-style-type: none;
    padding: 5px;

    text-align: center;

    width: 15%;
    background-color: #23262d;
    border-radius: 4px;
    background-position: 100%;

    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
</style>

---
interface Props {
  title: string;
  phone: string;
}

const { title, phone } = Astro.props;
---

<div class="bg-blue-600 bg-opacity-75 rounded-lg p-4 w-2xl">
  <h3 class="text-white text-center text-xl font-bold">{title}</h3>
  <h3 class="text-gray-300 text-center text-md font-bold font-mono">{phone}</h3>
</div>
